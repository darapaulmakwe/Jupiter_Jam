<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spacebg"
    tools:context=".MainMenu">

    <!-- Layout buttons -->
    <Button
        android:id="@+id/openPlayMenuButton"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="449dp"
        android:onClick="openPlayMenu"
        android:text="@string/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openProfileMenuButton"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="369dp"
        android:onClick="openProfileMenu"
        android:text="@string/profile_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openRulesMenuButton"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="293dp"
        android:text="@string/credit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openCreditMenuButton"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="629dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="220dp"
        android:text="@string/credit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Volume -->
    <ImageButton
        android:id="@+id/volumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="833dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        />


</androidx.constraintlayout.widget.ConstraintLayout>