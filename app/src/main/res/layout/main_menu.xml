<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_centerInParent="true"
    android:adjustViewBounds="true"
    android:background="@drawable/space_background"
    android:scaleType="fitXY"
    android:scaleX="1.5"
    android:scaleY="1.3">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="623dp"
        android:layout_height="626dp"
        app:srcCompat="@drawable/jupiterlogo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-106dp"
        tools:layout_editor_absoluteY="-76dp" />


    <ImageView
        android:id="@+id/astroidLink"
        android:layout_width="1064dp"
        android:layout_height="800dp"
        android:cropToPadding="false"
        android:padding="0dp"
        app:srcCompat="@drawable/astroid_link_layout"
        tools:layout_editor_absoluteX="-327dp"
        tools:layout_editor_absoluteY="177dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/openPlayMenuButton"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:onClick="openPlayMenu"
        android:text="@string/play_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="380dp" />

    <Button
        android:id="@+id/openProfileMenuButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="openProfileMenu"
        android:text="@string/profile_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/openRulesMenuButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="openCeditMenu"
        android:text="@string/credit_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="455dp" />

    <Button
        android:id="@+id/openCreditMenuButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:onClick="openCreditMenu"
        android:text="@string/credit_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="528dp" />

    <ImageButton
        android:id="@+id/volumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="93dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>