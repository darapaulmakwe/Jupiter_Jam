<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:adjustViewBounds="true"
    android:background="@drawable/spacebg"
    android:scaleType="fitXY"
    android:scaleX="1.5"
    android:scaleY="1.3"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/openCreditMenuButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="629dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="220dp"
        android:text="@string/credit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/volumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="93dp" />

    <Button
        android:id="@+id/openPlayMenuButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="449dp"
        android:text="@string/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openProfileMenuButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="369dp"
        android:text="@string/profile_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openRulesMenuButton"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="556dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="293dp"
        android:text="@string/credit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>